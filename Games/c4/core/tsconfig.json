{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022"]
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
